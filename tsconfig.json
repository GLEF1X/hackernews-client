{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "src/local-types"
    ],
    "paths": {
      "html-to-react": [
        "./src/local-types/html-to-react"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/local-types/**",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
